<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63px"
        android:background="#0eb468"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:background="#0eb468"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yuan"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:layout_marginTop="15dp"
                >
                <zerone.myapplication.view.CircleImageView
                    android:layout_width="48dp"
                    android:layout_centerInParent="true"
                    android:layout_height="48dp"
                    android:src="@mipmap/bg1"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="馨语奶茶店"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="锅巴哈哈  13102127301"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:maxEms="12"
                android:lines="1"
                android:ellipsize="end"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="福建省龙岩市长汀县店头街10号"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:maxEms="12"
                android:lines="2"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:background="@drawable/edit_btn_bg"
                android:text="编辑"
                android:textSize="16sp"
                android:textColor="#ffffff"

                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
